<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <TextView
        android:id="@+id/textHeaderWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <View
        android:id="@+id/lineHeaderWelcome"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/base"
        app:layout_constraintEnd_toEndOf="@+id/textHeaderWelcome"
        app:layout_constraintStart_toStartOf="@id/textHeaderWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderWelcome" />

    <Button
        android:id="@+id/buttonCollaboratorRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base"
        android:padding="12dp"
        android:text="@string/collaborator_registration"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>